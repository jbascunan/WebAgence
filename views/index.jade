//- index.jade
extends ./layout.jade

block title
    title=title

block content
    div.container
        include header.jade
        div.panel.panel-default
            div.row.divPeriodo
                span.col-xs-1 Periodo
                select#periodoInicio(name='periodoInicio')
                    option(value=1) January
                    option(value=2 selected='') February
                    option(value=3) March
                    option(value=4) April
                    option(value=5) May
                    option(value=6) June
                    option(value=7) July
                    option(value=8) August                    
                    option(value=8) September                    
                    option(value=8) October                    
                    option(value=8) November                    
                    option(value=8) December                    
                select#periodoAnioInicio(name='periodoAnioInicio')
                    option(value=2001) 2001
                    option(value=2002) 2002
                    option(value=2003) 2003
                    option(value=2004) 2004                        
                    option(value=2005) 2005
                    option(value=2006) 2006
                    option(value=2007 selected='') 2007

                span.spanPeriodo a

                select#periodoFin(name='periodoFin')
                    option(value=1) January
                    option(value=2 selected='') February
                    option(value=3) March
                    option(value=4) April
                    option(value=5) May
                    option(value=6) June
                    option(value=7) July
                    option(value=8) August                    
                    option(value=8) September                    
                    option(value=8) October                    
                    option(value=8) November                    
                    option(value=8) December 
                select#periodoAnioFin(name='periodoAnioFin')
                    option(value=2001) 2001
                    option(value=2002) 2002
                    option(value=2003) 2003
                    option(value=2004) 2004                        
                    option(value=2005) 2005
                    option(value=2006) 2006
                    option(value=2007 selected='') 2007
            div.panel-body.minWidth
                .col-xs-5.minWidth
                    select.multiselect.form-control(name='from[]', size='8', multiple='multiple', data-right='#multiselect_to_1', data-right-all='#right_All_1', data-right-selected='#right_Selected_1', data-left-all='#left_All_1', data-left-selected='#left_Selected_1')
                        -each consultores in data
                            option(value='#{consultores.co_usuario}') #{consultores.no_usuario}                        
                .col-xs-1.minWidth
                    button#right_All_1.btn.btn-block.minWidth(type='button')
                        i.glyphicon.glyphicon-forward
                    button#right_Selected_1.btn.btn-block.minWidth(type='button')
                        i.glyphicon.glyphicon-chevron-right
                    button#left_Selected_1.btn.btn-block.minWidth(type='button')
                        i.glyphicon.glyphicon-chevron-left
                    button#left_All_1.btn.btn-block.minWidth(type='button')
                        i.glyphicon.glyphicon-backward
                .col-xs-4.minWidth
                    select#multiselect_to_1.form-control(name='to[]', size='8', multiple='multiple')
                .col-xs-2.minWidth
                    button#btnRelatorio.btn.btn-block(type='button')
                        span.fa.fa-file-text Relatorio
                    button#btnGraficoBarra.btn.btn-block(type='button')
                        span.fa.fa-bar-chart Gr&aacute;fico
                    button#btnGraficoPizza.btn.btn-block(type='button')
                        span.fa.fa-pie-chart Pizza
        div.panel.panel-default            
            div#contenedorRelatorio.panel-body  Sin datos             
           
            script(id="table-template" type="text/x-handlebars-template")
                div.panel.panel-default                    
                    table(cellspacing='1', cellpadding='3', width='100%', bgcolor='#cccccc')
                        tbody
                            tr(bgcolor='#efefef')
                                td(colspan='5')
                                    span.style3 {{nombreConsultor}}
                            tr(bgcolor='#fafafa')
                                td(nowrap='')
                                    div(align='center')
                                        strong Per&iacute;odo
                                td
                                    div(align='center')
                                        strong Receta L&iacute;quida 
                                td
                                    div(align='center')
                                        strong Costo Fijo 
                                td
                                    div(align='center')
                                        strong Comisi&oacute;n
                                td
                                    div(align='center')
                                        strong Lucro                                              
                            {{#each resultado}}
                            tr(bgcolor='#efefef')
                                td(nowrap='')
                                    strong {{mes}} de {{anio}}
                                td
                                    div(align='right') R$ {{liquido}}
                                td
                                    div(align='right') - R$ {{CostoFijo}}
                                td
                                    div(align='right') - R$ {{comision}}
                                td
                                    div(align='right') R$ {{lucro}}
                            {{/each}}  
                            tr(bgcolor='#fafafa')
                                td(nowrap='', bgcolor='#fafafa')
                                    strong SALDO
                                td
                                    div(align='right')
                                        font(color='#0000FF') R$ {{totalLiquido}}
                                td
                                    div(align='right')
                                        font(color='#0000FF') - R$ {{totalCostoFijo}}
                                td
                                    div(align='right')
                                        font(color='#0000FF') - R$ {{totalComision}}
                                td
                                    div(align='right')
                                        font(color='#0000FF') R$ {{totalLucro}}
                


    script(type="text/javascript" src="/js/multiselect.min.js")
    script(type="text/javascript" src="/js/funciones.js")
    
    
            




